@model PasswordChangeViewModel
@{
	ViewBag.Title = "Password";
}

<!--====== Page Title start ======-->
<partial name="Partials/_PageTitlePartial" />
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
	<div class="container">
		<div class="user-actions mb-40">
			<p>Hesabınız varsa <a asp-controller="Account" asp-action="Login">Giriş için tıklayınız.</a></p>
		</div>
		<form asp-controller="Account" asp-action="UpdatePassword" method="post">
			<div class="row">
				<div class="col-lg-12">
					<div class="billing-details">
						<h3 class="title">Kayıt Formu</h3>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label asp-for="OldPassword"> </label>
									<input asp-for="OldPassword" />
									<span asp-validation-for="OldPassword"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label asp-for="NewPassword"> </label>
									<input asp-for="NewPassword" />
									<span asp-validation-for="NewPassword"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label asp-for="ConfirmPassword"> </label>
									<input asp-for="ConfirmPassword" />
									<span asp-validation-for="ConfirmPassword"></span>
								</div>
							</div>
							
						</div>
						<div class="row">
							<div class="col-md-4">
								<div class="payment-box mt-38">
									<input type="submit" class="main-btn" value="Kayıt Ol" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
    {
<style>
	input {
		border: solid 1px #e3eeff;
		height: 50px;
		padding: 0 15px;
	}
</style>

    }

